/* components/href-card/href-card.wxss */
.href-card {
    width: 750rpx;
    height: 375rpx;
    display: flex;
}
.card-text {
    margin: 40rpx;
    margin-top: 60rpx;
    flex: 1;
    color: #fff;
    font-size: 32rpx;
}
.card-text .card-text_title {
    font-size: 48rpx;
    font-weight: bold;
}
.card-text .card-text_desc {
    margin-top: 40rpx;
}
.card-img {
    margin: 40rpx;
    flex: 0 0 290rpx;
    height: 290rpx;
}
.card-img image {
    width: 100%;
    height: 100%;
}