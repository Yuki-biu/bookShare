<!--component/nav-bar/nav-bar.wxml-->
<view>
    <!-- 弥补nav-bar的高度 -->
    <view style="height: {{topHeight}}px;"></view>
    <view class="container">
        <!-- 手机头部显示电量栏 -->
        <view style="{{statusBarStyle}}"></view>
        
        <view class="nav-bar" style="{{navBarStyle}}">
            <view wx-if="{{showBtn}}" class="backBtn" bindtap="toPage">
                <image src="/images/back_white.png"/>
            </view>
            <view>{{title}}</view>
        </view>
    </view>
</view>
